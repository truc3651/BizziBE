{
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "prettier"
    ],
    "ignorePatterns": [
        "contracts/*.ts",
        "**/*.spec.ts"
    ],
    "rules": {
        "prettier/prettier": [
            "error"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ]
    }
}